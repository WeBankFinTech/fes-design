{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "ES6",
        "moduleResolution": "node",
        "paths": {
            "@fesjs/fes-design": [
                "./components/index.ts"
            ]
        },
        "types": [
            "jest"
        ],
        "strict": true,
        "strictNullChecks": false,
        "declaration": true,
        "declarationDir": "./types",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules"
    ]
}
